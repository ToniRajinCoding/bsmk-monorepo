<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SearchActivity">

    <TextView
        android:id="@+id/tvMaterial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="204dp"
        android:text="Bahan Masak"
        android:textSize="18sp"
        android:layout_marginStart="18dp"
        app:layout_constraintRight_toLeftOf="@id/etMaterial"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/etMaterial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="192dp"
        android:text="chicken"
        app:layout_constraintLeft_toRightOf="@id/tvMaterial"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMasakType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="masak type"
        android:textSize="20sp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="18dp"
        app:layout_constraintTop_toBottomOf="@id/tvMaterial"
        app:layout_constraintRight_toLeftOf="@id/etMasakType"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/etMasakType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="fried"
        app:layout_constraintStart_toEndOf="@id/tvMasakType"
        app:layout_constraintTop_toBottomOf="@id/etMaterial"/>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="44dp"
        android:text="submit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etMasakType" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="asd"
        app:layout_constraintTop_toBottomOf="@+id/btnSubmit" />

</androidx.constraintlayout.widget.ConstraintLayout>