<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_mobile"
    app:startDestination="@id/navSearch">

    <fragment
        android:id="@+id/navSearch"
        android:name="com.example.besokmasak.search.SearchFragment"
        android:label="Find Recipes"
        tools:layout="@layout/fragment_search">
    </fragment>

    <fragment
        android:id="@+id/navFavorite"
        android:name="com.example.besokmasak.favorite.FavoriteFragment"
        android:label="Favorite Recipes"
        tools:layout="@layout/fragment_favorite">

    </fragment>

    <activity
        android:id="@+id/navResult"
        android:name="com.example.besokmasak.searchresult.RecipeResultActivity"
        android:label="menu_result"
        tools:layout="@layout/activity_recipe_result"/>

</navigation>